@model List<Post>
<div class="card-body">
   
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        <img src="@item.Image" />
                    </td>
                    <td>
                        @item.Date
                    </td>
                    <td class="d-flex">
                        <div>
                            <a class="btn btn-outline-primary" asp-controller="post" asp-action="detail" asp-route-id="@item.Id">Detail</a>
                        </div>
                        <div class="ms-2">
                            <a class="btn btn-outline-warning" asp-controller="post" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                        </div>
                        <div class="ms-2">
                            <a class="btn btn-outline-danger" asp-controller="post" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</div>    



